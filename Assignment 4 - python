        "E9:\n",
        "#Problem: Fahrenheit = (( 9/5 )Centigrade)\n",
        "#Solution\n",
        "#Begin\n",
        "# Take test Centigrade input from user\n",
        "Centigrade = float(input(\"Enter Centigrade\"))\n",
        "#calculate Farenheight from using Centigrade formula\n",
        "fahrenheit = (Centigrade*(9/5)) + 32\n",
        "#print the result\n",
        "print(\"Fahrenheit is: \", fahrenheit)\n",
        "#End\n",
